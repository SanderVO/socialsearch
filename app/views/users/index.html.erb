<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Salt</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Date created</th>
      <th>Date updated</th>
      <th>Active</th>
      <th>Activationkey</th>
      <th>City</th>
      <th>Country</th>
      <th>Street</th>
      <th>Postal code</th>
      <th>Gender</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.salt %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.date_created %></td>
        <td><%= user.date_updated %></td>
        <td><%= user.active %></td>
        <td><%= user.activationkey %></td>
        <td><%= user.city %></td>
        <td><%= user.country %></td>
        <td><%= user.street %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.gender %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

