<% content_for :main do %>
  <h1>Users</h1>

  <hr />

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Username</th>
        <th>Password</th>
        <th>Salt</th>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.password %></td>
          <td><%= user.salt %></td>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.street %>, <%= user.postal_code %> <%= user.city %>, <%= user.country %></td>
          <td><%= user.gender %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user %> | <%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
<% end %>
