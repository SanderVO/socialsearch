<% content_for :main do %>
	<div class="hero-unit">
	  <h1>Welcome traveler!</h1>
	  <p>What are you waiting for? Start searching!</p>
	  	<div class="input-append">
		  <input class="span6" id="mainSearch" type="text">
		  <button class="btn" type="submit" onclick="search()">Search!</button>
		  <button class="btn" type="button" onclick="js:$('#searchOptions').toggle()">Options</button>
		</div>

		<div id="searchOptions" style="display:none;">
			<label class="checkbox">
			  <input type="checkbox" value="" name="flickr">
			  Flickr
			</label>

			<label class="checkbox">
			  <input type="checkbox" value="" name="twitter">
			  Twitter
			</label>

			<label class="checkbox">
			  <input type="checkbox" value="" name="youtube" checked>
			  YouTube
			</label>

			<label class="checkbox">
			  <input type="checkbox" value="" name="facebook" checked>
			  Facebook
			</label>

			<label class="checkbox">
			  <input type="checkbox" value="" name="google">
			  Google
			</label>

			<label class="checkbox">
			  <input type="checkbox" value="" name="instagram">
			  Instagram
			</label>

			<label class="checkbox">
			  <input type="checkbox" value="" name="tumblr" checked>
			  Tumblr
			</label>
		</div>
	</div>

	<div id="searchResults">
		<div id="flickr" style="display:none;">
			<img src="/assets/flickr-logo.png" class="logoResults" />

			<hr />

			<div class="flickr-results">
			</div>
		</div>
		<div id="twitter" style="display:none;">
			<img src="/assets/twitter-logo.png" class="logoResults" />

			<hr />

			<div class="twitter-results">
			</div>
		</div>
		<div id="tumblr" style="display:none;">
			<img src="/assets/tumblr-logo.png" class="logoResults" />

			<hr />

			<div class="tumblr-results">
		</div>
		<div id="youtube" style="display:none;">
			<img src="/assets/youtube-logo.png" class="logoResults" />

			<hr />

			<div class="youtube-results">
			</div>
		</div>
	</div>
<% end %>
